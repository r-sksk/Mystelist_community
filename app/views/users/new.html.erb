<h1>ユーザー情報を作成する</h1>
<%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :"ユーザー名" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :"一言（つぶやき）" %>
    <%= f.text_field :word %>
  </div>

  <div class="form-group">
    <%= f.label :"自己紹介" %>
    <%= f.text_field :self_introduction %>
  </div>

  <div class="form-group">
    <%= f.label :"画像" %>
    <%= f.file_field :images %><br>
  </div>

  <div class="submit-block">
    <%= f.submit "作成する", class: "button" %>
  </div>
<% end %>