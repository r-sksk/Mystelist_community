<h1>ユーザー情報を更新する</h1>
<% if @user.errors.any? %>
  <div class="errors">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local:true do |f| %>
    <div class="form-group">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :word, "一言（つぶやき）" %>
      <%= f.text_field :word %>
    </div>

    <div class="form-group">
      <%= f.label :self_introduction, "自己紹介" %>
      <%= f.text_area :self_introduction, rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :image, "プロフィール画像" %>
      <%= f.file_field :image %><br>
    </div>

    <% if f.object.image.attached? %>
      <div class="image-preview">
        <span>現在のプロフィール画像：</span>
        <%= image_tag f.object.image %>
      </div>
    <% end %>

    <div class="submit-block">
      <%= f.submit "更新する", class: "button" %>
    </div>
  <% end %>